extends ../layout.jade
block content
  .container
    h3
      span= user.name
      -if(req.cookies.userId && req.cookies.userId == user.id)
        a.btn.btn-primary.btn-xs(href="/users/" + user.id + "/edit" , style="float:right") EDIT PROFILE
        span(style="float:right") &nbsp;&nbsp;
        a.btn.btn-primary.btn-xs(href="/users/" + user.id + "/changePassword", style="float:right") CHANGE PASSWORD
        p
    hr
    h4= "Email : " + user.email
    h4= "Role : " + user.role
    -if(blogs && blogs.length > 0)
      h4 Blogs :
      ul
        -each blog in blogs
          li
            a(href="/blogs/" + blog.id, style="font-size:16px;")= blog.title
            span= ", " + time.relativeTime(blog.createdAt)
            p
            p
